<UserControl x:Class="WPFPeony.Surveil.ToolBarCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm">

    <Border HorizontalAlignment="Right"
            DataContext="{Binding VideoViewOper}">
        <dx:RadioButtonList x:Name="ButtonList"
                            BorderThickness="0"
                            SelectedIndex="1"
                            ItemsSource="{Binding LayoutTypeCol}"
                            ItemsPanel="{StaticResource StackPanelTemplate}">
            <dxmvvm:Interaction.Triggers>
                <dxmvvm:EventToCommand EventName="SelectionChanged"
                                       Command="{Binding SelectionChangedCmd}"
                                       CommandParameter="{Binding SelectedItem,ElementName=ButtonList}" />
            </dxmvvm:Interaction.Triggers>
            <dx:RadioButtonList.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ControlView}"
                                    ToolTip="{Binding ControlToolTip}" />
                </DataTemplate>
            </dx:RadioButtonList.ItemTemplate>
        </dx:RadioButtonList>
    </Border>

</UserControl>
