<UserControl x:Class="WPFPeony.Surveil.VideoViewCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:WPFPeony.Surveil.ViewModel;assembly=WPFPeony.Surveil.ViewModel"
             xmlns:resource="clr-namespace:WPFPeony.Surveil.Resource;assembly=WPFPeony.Surveil.Resource"
             DataContext="{Binding VideoViewOper}">

    <UserControl.Resources>
        <!--ListBox-->
        <Style x:Key="VideoWinListBoxStyle"
               TargetType="{x:Type ListBox}">
            <Setter Property="SnapsToDevicePixels"
                    Value="True" />
            <Setter Property="Background"
                    Value="{DynamicResource {resource:ThemeBrushKey ResourceKey=ContentBorder}}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                            <ScrollViewer x:Name="Content"
                                          Focusable="False">
                                <ItemsPresenter Margin="{TemplateBinding Padding}" />
                            </ScrollViewer>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="Content"
                                        Property="Opacity"
                                        Value="0.35" />
                            </Trigger>
                            <Trigger Property="IsGrouping"
                                     Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll"
                                        Value="False" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBoxItem -->
        <Style x:Key="VideoWinListBoxItemStyle"
               TargetType="{x:Type ListBoxItem}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource {resource:ThemeBrushKey ResourceKey=ContentBorder}}" />
            <Setter Property="Background"
                    Value="{DynamicResource {resource:ThemeBrushKey ResourceKey=ContentBack}}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="VerticalContentAlignment"
                    Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="contentPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!--选中-->
                <Trigger Property="Selector.IsMouseOver"
                         Value="True">
                    <Setter Property="BorderThickness"
                            Value="2" />
                    <Setter Property="Margin"
                            Value="-1" />
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {resource:ThemeBrushKey ResourceKey=ContentOverBorder}}" />
                </Trigger>

                <Trigger Property="Selector.IsSelected"
                         Value="True">
                    <Setter Property="BorderThickness"
                            Value="2" />
                    <Setter Property="Margin"
                            Value="-1" />
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource {resource:ThemeBrushKey ResourceKey=ContentSelectedBorder}}" />
                    <Setter Property="Panel.ZIndex"
                            Value="2" />
                </Trigger>

            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ListBox ItemsPanel="{DynamicResource ViewPanelTemplate}"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             ItemContainerStyle="{StaticResource VideoWinListBoxItemStyle}"
             Style="{StaticResource VideoWinListBoxStyle}">
        <ListBox.ItemsSource>
            <x:Array Type="{x:Type viewModel:UIDataBase}">
                <viewModel:UIDataBase ControlName="View1" />
                <viewModel:UIDataBase ControlName="View2" />
                <viewModel:UIDataBase ControlName="View3" />
                <viewModel:UIDataBase ControlName="View4" />
                <viewModel:UIDataBase ControlName="View5" />
                <viewModel:UIDataBase ControlName="View6" />
                <viewModel:UIDataBase ControlName="View7" />
                <viewModel:UIDataBase ControlName="View8" />
                <viewModel:UIDataBase ControlName="View9" />
            </x:Array>
        </ListBox.ItemsSource>

        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid Background="{DynamicResource {resource:ThemeBrushKey ResourceKey=ContentBack}}">
                    <ContentControl Margin="15"
                                    Content="{DynamicResource Media-Player}" />
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
